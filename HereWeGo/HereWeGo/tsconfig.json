{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "scripts",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "pretty": true,
    "outDir": "www/scripts",
    "module": "amd",
    "target": "es6",
  },
  "exclude": ["platforms", "node_modules", "bower_components", "plugins", "merges", "res", "bin", "bld", "www", "build_scripts", "docs", "typedocgulp.js"]
}
